@model EntityLayer.Concrete.Heading
@{
    ViewData["Title"] = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Baslik Guncelleme Sayfasi</h2>
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Baslik Adi")
        @Html.TextBoxFor(x=>x.HeadingName,new {@class="form-control"})
        <br>
        @Html.DropDownListFor(x=>x.Category,(List<SelectListItem>) ViewBag.vlc , new { @class = "form-control"})
        <br>
        <button class="btn btn-success">Guncelle</button>

    </div>
}

