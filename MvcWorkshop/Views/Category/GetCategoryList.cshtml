@using EntityLayer.Concrete
@model List<Category>
@{
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<h3>MVC Kamp Tablo Ornegi</h3>
<br />
<table class="table table-hover">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Ad</th>
        <th scope="col">Aciklama</th>
        <th scope="col">Durum</th>
        <th scope="col">Guncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>@item.CategoryStatus</td>
            <td><button class="btn btn-success">Guncelle</button></td>
        </tr>
    }
</table>
<a href ="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>
<button class="btn btn-warning">Kategori Listesi</button>
<button class="btn btn-danger">Kategori Aciklamalari</button>